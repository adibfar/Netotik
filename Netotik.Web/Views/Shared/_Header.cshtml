                                <div class="dropdown-divider"></div>
                                <a href="@Url.Action(MVC.Client.Home.LogOff())" class="dropdown-item">
                                    @Captions.Logout <i class="icon-power3"></i>
                                </a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
