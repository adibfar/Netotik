@using Netotik.Common.Controller.MessageHelper
@using Netotik.Web.RazorHelpers
@if (TempData.ContainsKey(Message.TempDataKey))
{
    var message = TempData[Message.TempDataKey] as Message;

    foreach (var item in message.Messages)
    {
        <div class="row">
            <div class="col-md-12">
                @if (item.Type == MessageType.error)
                {
                    <div class="alert alert-icon-left alert-danger alert-dismissible fade in mb-2" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                        <strong> @item.Title:</strong> @item.Message
                    </div>
                }
                else if (item.Type == MessageType.success)
                {
                    <div class="alert alert-icon-left alert-success alert-dismissible fade in mb-2" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                        <strong>@item.Title:</strong> @item.Message
                    </div>
                }
                else if (item.Type == MessageType.warning)
                {
                    <div class="alert alert-icon-left alert-warning alert-dismissible fade in mb-2" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                        <strong>@item.Title:</strong> @item.Message
                    </div>
                }
                else if (item.Type == MessageType.information)
                {
                    <div class="alert alert-icon-left alert-info alert-dismissible fade in mb-2" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                        <strong>@item.Title:</strong> @item.Message
                    </div>
                }
            </div>
        </div>
    }
}