@model List<Netotik.Domain.Entity.Content>
@{
    Layout = null;
}


@if (Model.Any())
{

    <div class="heading-title heading-dotted text-center">
        <h2>آخرین مطالب  <span>وبلاگ</span></h2>
    </div>

    <section>
        <div class="container">

            <div class="owl-carousel owl-padding-10 buttons-autohide controlls-over" data-plugin-options='{"singleItem": false, "items":"4", "autoPlay": 4000, "navigation": true, "pagination": false}'>

                @foreach (var item in Model)
                {
                    <div class="img-hover">
                        <a title="@item.Title" href="@Url.Action(MVC.Blog.ActionNames.Detail, MVC.Blog.Name, new { Id = item.Id, name = item.Title })">
                            <img class="img-responsive" src="@Url.Content(Path.Combine(Netotik.Common.Controller.FilePathes._imagesContentPath, item.PictureId.HasValue ? item.Picture.FileName:"Default.png"))?w=370&h=243&mode=crop" alt="@item.Title" />
                        </a>

                        <h4 class="text-right margin-top-20" style="min-height:70px;"><a href="@Url.Action(MVC.Blog.ActionNames.Detail, MVC.Blog.Name, new { Id = item.Id, name = item.Title })">@item.Title</a></h4>
                        <ul class="text-right size-12 list-inline list-separator">
                            <li>
                                <i class="fa fa-calendar"></i>
                                    @PersianDate.ConvertDate.ToFa(item.StartDate.Value, "g")
                            </li>
                            <li>
                                <a title="@item.Title" href="@Url.Action(MVC.Blog.ActionNames.Detail, MVC.Blog.Name, new { Id = item.Id, name = item.Title })">
                                    <i class="fa fa-eye"></i>
                                    @item.CountView
                                </a>
                            </li>
                        </ul>
                        <p class="text-right justify text-justify">
                            @if (item.BodyOverview.Length > 250)
                            {
                                @item.BodyOverview.Substring(0, 250)
                            }
                            else
                            {
                                @item.BodyOverview
                            }
                        </p>

                    </div>
                }
            </div>

        </div>
    </section>


}