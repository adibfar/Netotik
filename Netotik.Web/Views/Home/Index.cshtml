@{
    var setting = Html.Setting(ViewContext.HttpContext);
    var meta = new Netotik.ViewModels.Common.Meta.MetaViewModel()
    {
        Title = string.Format("{0} | {1}", Captions.Netotik, setting.HomePageTitle),
        Description = setting.HomePageDescription,
        Keywords = setting.HomePageKeywords,
        OgType="website",
        OgTitle = string.Format("{0} | {1}", Captions.Netotik, Captions.HomeMenu),
        OgUrl = Url.Action(MVC.Home.Index()),
        OgDescription = setting.HomePageDescription,
        OgSiteName = Captions.Netotik,
        OgTags = setting.HomePageKeywords.Split(',')
    };
}


@section Meta{
    @Html.Partial(MVC.SharedPublic.Views._Meta, meta)
}

@if (false)
{
    @Html.Action(MVC.Home.Slider())
}
else
{
    @Html.Partial(MVC.Home.Views._StaticSlider)
}

@Html.Action(MVC.Home.ActionNames.Section)

@Html.Action(MVC.Home.ActionNames.LastBlog)