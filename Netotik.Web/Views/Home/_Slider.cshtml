@model List<Netotik.Domain.Entity.Slider>

@{
    Layout = null;
}


    <section id="slider" class="fullwidthbanner-container">
        <!--
            Navigation Styles:

                data-navigationStyle="" theme default navigation

                data-navigationStyle="preview1"
                data-navigationStyle="preview2"
                data-navigationStyle="preview3"
                data-navigationStyle="preview4"

            Bottom Shadows
                data-shadow="1"
                data-shadow="2"
                data-shadow="3"

            Slider Height (do not use on fullscreen mode)
                data-height="300"
                data-height="350"
                data-height="400"
                data-height="450"
                data-height="500"
                data-height="550"
                data-height="600"
                data-height="650"
                data-height="700"
                data-height="750"
                data-height="800"
        -->
        <div class="fullwidthbanner" data-height="500" data-shadow="1" data-navigationStyle="">
            <ul class="hide">

                @foreach (var item in Model)
            {
                    <li data-transition="fade" data-slotamount="1" data-masterspeed="0" data-saveperformance="off" data-title="" data-thumb="@Url.Content(Path.Combine(Netotik.Common.Controller.FilePathes._imagesSliderPath+"//", item.Picture.FileName))">

                        <img src="@Url.Content(Path.Combine(Netotik.Common.Controller.FilePathes._imagesSliderPath+"//", item.Picture.FileName))" data-lazyload="@Url.Content(Path.Combine(Netotik.Common.Controller.FilePathes._imagesSliderPath+"//", item.Picture.FileName))" data-bgposition="center center" data-bgfit="cover" data-bgrepeat="no-repeat">
                    </li>
                }
            </ul>
        </div>
    </section>


