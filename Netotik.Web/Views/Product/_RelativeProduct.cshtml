@model List<Netotik.ViewModels.Shop.ProductPanel.BoxProductModel>
@using Netotik.Web.Extension
@{
    Layout = null;
}
@if (Model.Any())
{

    <!-- Start featured product -->
    <div class="featured-product-area">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12">
                    <div class="area-title">
                        <h3>محصولات مشابه</h3>
                    </div>
                </div>
                <div class="featured-product">
                    <div class="featured-item">
                        @foreach (var item in Model)
                        {
                            @Html.Partial(MVC.Shared.Views._ProductBox, item)
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}
