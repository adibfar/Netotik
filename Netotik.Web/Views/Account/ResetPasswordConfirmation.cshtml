@model Netotik.Domain.Entity.User
@{
    Layout = MVC.Shared.Views._Layout;
}
<section class="flexbox-container">
    <div class="col-md-8 offset-md-2 col-xs-12">
        <div class="alert alert-icon-left alert-success alert-dismissible fade in mb-2" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">Ã—</span>
            </button>
            <strong>@Captions.ChangePasswordSuccess</strong>
            @if (!User.Identity.IsAuthenticated)
            {
                if (Model.UserType == Netotik.Domain.Entity.UserType.UserAdmin)
                {
                    @Html.ActionLink(Captions.LoginToUserAccount, MVC.Account.ActionNames.Login, MVC.Account.Name, null, new { })
                }
                if (Model.UserType == Netotik.Domain.Entity.UserType.UserRouter)
                {
                    <a href="@Url.Action(MVC.Login.Router("",Model.UserReseller.ResellerCode))">@Captions.LoginToUserAccount</a>
                }
                if (Model.UserType == Netotik.Domain.Entity.UserType.UserReseller)
                {
                    @Html.ActionLink(Captions.LoginToUserAccount, MVC.Login.ActionNames.Reseller, MVC.Login.Name, null, new { })
                }
            }

        </div>
    </div>
</section>
