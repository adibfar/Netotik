@{
    Layout = MVC.Shared.Views._Layout;
}
<div class="panel panel-default">
    <div class="panel-heading">
        @Captions.ActivationAccount
    </div>
    <div class="panel-body">
        <p class="lead">
            @Captions.ConfirmEmailMessage
        </p>
    </div>
    <div class="panel-footer">
        @Html.ActionLink(Captions.LoginToSystem, MVC.Account.ActionNames.Login, MVC.Account.Name,
        routeValues: new { area = "" }, htmlAttributes: new { @class = "btn btn-block btn-md btn-success" })
    </div>
</div>


