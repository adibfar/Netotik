@using CaptchaMvc.HtmlHelpers
@model Netotik.ViewModels.ContactUs.SendMessage

@section Down{
    @Scripts.Render("~/bundles/jqueryvalpublic")
    @Html.Partial(MVC.Shared.Views._AddValidationCss)
}
<!-- Start page content -->
<div class="page-content">
    <!-- Start contact page area -->
    <div class="container">
        <!-- Start contact-map -->
        <!-- End contact-map -->
        <!-- Start contact from atea -->
        <div class="contact-from-atea">
            <div class="form-and-info">
                <div class="row">
                    <div class="col-xs-12 col-sm-8 col-md-8">
                        <div class="contactfrom">
                            <h3>ارسال پیام</h3>
                            @using (Html.BeginForm(MVC.ContactUs.ActionNames.Index, MVC.ContactUs.Name, FormMethod.Post))
                            {
                                <div class="row">

                                    @Html.AntiForgeryToken()
                                    <div class="col-md-6 contactemail">
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "ایمیل" })
                                    </div>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "نام و نام خانوادگی" })
                                    </div>
                                    <div class="col-md-12">
                                        @Html.TextAreaFor(model => model.Text, new { @class = "form-control", rows = "13", placeholder = "متن پیام" })
                                    </div>
                                    <div class="row">
                                        <div class="form-group">
                                            @Html.MathCaptcha(MVC.Shared.Views._CaptchaPartial)
                                        </div>
                                    </div>
                                </div>
                                <button class="btn btnContact" type="submit">ارسال</button>
                            }
                        </div>
                    </div>
                    @Html.Partial(MVC.ContactUs.Views._SideBar, (Netotik.ViewModels.Setting.GeneralSettingModel)ViewBag.siteConfig)
                </div>
            </div>
            <!-- End contact from atea -->
        </div>
    </div>
    <!-- End contact page area -->
</div>