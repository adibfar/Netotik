@model Netotik.ViewModels.Mikrotik.Router_EthernetModel
@{
    ViewBag.Title = "مخشصات اینترفیس";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="ibox-content m-b-sm border-bottom">
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-default btn-outline pull-left" href="@Url.Action(MVC.MyRouter.Router.ActionNames.Interfaces, MVC.MyRouter.Router.Name)">
                <span class="fa fa-reply"></span>
                @Netotik.Resources.Captions.Back
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="tabs-container">
        <ul class="nav nav-tabs">
            <li class="active">
                <a data-toggle="tab" href="#profile"><i class="icon-2x icon-user"></i> مشخصات</a>
            </li>
            <li class="">
                <a data-toggle="tab" href="#pro"><i class="icon-2x icon-flag"></i> پیشرفته</a>
            </li>
            <li class="">
                <a data-toggle="tab" href="#transfer"><i class="icon-2x icon-flag"></i> حجم </a>
            </li>
            <li class="">
                <a data-toggle="tab" href="#time"><i class="icon-2x icon-flag"></i> زمان </a>
            </li>
        </ul>
        <div class="tab-content">
            <div id="profile" class="tab-pane active form-horizontal panel-body">
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.default_name)
                    </div>
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.name)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.orig_mac_address)
                    </div>
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.mac_address)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.speed)
                    </div>
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.full_duplex)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.disabled)
                    </div>
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.running)
                    </div>
                </div>
            </div>
            <div id="pro" class="tab-pane form-horizontal panel-body">
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.arp)
                    </div>
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.arp_timeout)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.auto_negotiation)
                    </div>
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.cable_settings)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.loop_protect_status)
                    </div>
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.loop_protect)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.loop_protect_disable_time)
                    </div>
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.loop_protect_send_interval)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.disable_running_check)
                    </div>
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.mtu)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.tx_flow_control)
                    </div>
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.rx_flow_control)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.advertise)
                    </div>
                </div>

            </div>
            <div id="transfer" class="tab-pane form-horizontal panel-body">
                
            </div>
            <div id="time" class="tab-pane form-horizontal panel-body">
                
            </div>
        </div>

    </div>
</div>