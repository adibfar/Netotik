@{
    ViewBag.Title = "کاربران";
    int ServersCounter = 1;
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">کاربران هات اسپات</h4>
                <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="icon-minus4"></i></a></li>
                        <li><a data-action="reload"><i class="icon-reload"></i></a></li>
                        <li><a data-action="expand"><i class="icon-expand2"></i></a></li>
                        <li><a data-action="close"><i class="icon-cross2"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body collapse in">
                <div class="card-block">
                    <div class="form-body">
                        <div class="col-xs-12">
                            <table class="table table-striped table-bordered table-hover zero-configuration dataex-colvis-restore" id="grid" >
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th data-toggle="true">Name</th>
                                        <th>Profile</th>
                                        <th>محدودیت زمان</th>
                                        <th>محدودیت دانلود</th>
                                        <th>محدودیت آپلود</th>
                                        <th>محدودیت دانلود و آپلود</th>
                                        <th>زمان اتصال</th>
                                        <th>دانلود مصرفی</th>
                                        <th>آپلود مصرفی</th>
                                        <td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.servers)
                                    {
                                        <tr>
                                            <td>@(ServersCounter++)</td>
                                            <td>@item.name</td>>
                                            <td>@item.profile</td>
                                            <td>@item.limit_uptime</td>
                                            <td>@item.limit_bytes_in</td>
                                            <td>@item.limit_bytes_out</td>
                                            <td>@item.limit_bytes_total</td>
                                            <td>@item.uptime</td>
                                            <td>@item.bytes_in</td>
                                            <td>@item.bytes_out</td>
                                            <td>
                                                <a onclick="Remove('@item.id');" class="dropdown-item">
                                                    <i class="icon-trash4 danger"></i> حذف
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@section UpScript{
    <link rel="stylesheet" type="text/css" href="~/Content/css/plugins/tables/extensions/dataTables.colVis.css">
}
@section DownScript{
    <script src="~/Content/js/plugins/tables/datatable/dataTables.colVis.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            var table = $('#grid').dataTable({
                "order": [[1, 'asc']],
                "iDisplayLength": 10,
                "bProcessing": true,
                "bStateSave": true,
                "bFilter": true,
                "scrollX": true,
                "bAutoWidth": true,
                "aoColumnDefs": [{ "bSortable": false, "aTargets": [-1] }],
                "aLengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                "oLanguage": {
                    "sUrl": "/Content/js/plugins/tables/datatable/dataTables.persian.txt"
                }
            });
        });

    </script>
}
