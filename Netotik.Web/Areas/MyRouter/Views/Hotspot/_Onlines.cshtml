@{
    var ServersCounter = 1;
}

@if (ViewBag.servers == null)
{
    <label>@Captions.OnlineUsers</label>
    <div class="alert alert-danger">
        @Captions.CantConnectToRouter
    </div>
}
else
{
    <table class="table table-striped table-bordered table-hover zero-configuration dataex-colvis-restore" id="grid">
        <thead>
            <tr>
                <th>#</th>
                <th data-toggle="true">Flags</th>
                <th>Mac Address</th>
                <th>Address</th>
                <th>Server</th>
                <th>Uptime</th>
                <th>Username</th>
                <th>Radius</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.servers)
            {
                <tr>
                    <td>@(ServersCounter++)</td>
                    <td>@item.Flags</td>
                    <td>@item.mac_address</td>
                    <td>@item.address</td>
                    <td>@item.server</td>
                    <td>@item.uptime</td>
                    <td>@item.user</td>
                    <td>@item.radius</td>
                </tr>
            }
        </tbody>
    </table>
}