@model Netotik.ViewModels.Identity.UserCompany.ChangePasswordModel
@{
    ViewBag.Title = "تغییر گذرواژه";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-md-12">
                <a class="btn btn-default btn-outline pull-left" href="@Url.Action(MVC.Company.Home.ActionNames.Index, MVC.Company.Home.Name)">
                    <span class="fa fa-reply"></span>
                    @Netotik.Resources.Captions.Back
                </a>
            </div>
        </div>
    </div>
    <div class="col-lg-12" id="ContentPage">
        <section class="panel">
            <header class="panel-heading alert-info">
                @ViewBag.Title
            </header>
            <div class="panel-body">

                <div class="form">

                    @using (Html.BeginForm(MVC.Company.Home.ActionNames.ChangePassword, MVC.Company.Home.Name, null, FormMethod.Post, htmlAttributes: new { @class = "cmxform form-horizontal tasi-form", id = "form" }))
                    {
                        @Html.HiddenFor(Model => Model.Id)
                        @Html.EditorFor(model => Model.Password)
                        @Html.EditorFor(model => Model.ConfirmPassword)

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">

                                <button class="btn btn-primary" onclick="AjaxForm.CustomSubmit(this, 'form')" data-loading-text="در حال ارسال اطلاعات">
                                    @Netotik.Resources.Captions.Save
                                </button>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </section>
    </div>
</div>







