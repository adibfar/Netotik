@{
    ViewBag.Title = "لیست کاربران";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var counter = 1;
}
<section id="configuration">
    <div class="row">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-header">
                    <a value="افزودن کاربر" class="btn btn-social btn-instagram" href="@Url.Action(MVC.Company.UserManager.UserCreate())">
                        <span class="icon-user-plus font-medium-4"></span>
                        افزودن کاربر
                    </a>
                    <a value="کاربر گروهی" class="btn btn-social btn-instagram" href="@Url.Action(MVC.Company.UserManager.ResetCounter())">
                        <span class="icon-users font-medium-4"></span>
                        کاربر گروهی
                    </a>
                    <a value="چاپ لیست" class="btn btn-social btn-instagram" href="@Url.Action(MVC.Company.UserManager.ResetCounter())">
                        <span class="icon-print font-medium-4"></span>
                        چاپ لیست
                    </a>
                    <a value="ساخت کارت" class="btn btn-social btn-instagram" href="@Url.Action(MVC.Company.UserManager.ResetCounter())">
                        <span class="icon-card font-medium-4"></span>
                        ساخت کارت
                    </a>
                </div>
                <div class="card-body collapse in">
                    <div class="card-block card-dashboard">
                        <table class="table table-striped table-bordered table-hover zero-configuration dataex-colvis-restore" id="grid">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>نام کاربری</th>
                                    <th>تعرفه فعال</th>
                                    <th>زمان اتصال</th>
                                    <th>دانلود</th>
                                    <th>آپلود</th>
                                    <th>آخرین اتصال</th>
                                    <th>نام</th>
                                    <th>نام خانوادگی</th>
                                    <th>شماره تماس</th>
                                    <th>آدرس</th>
                                    <th>آدرس ایمیل</th>
                                    <th>توضیحات</th>
                                    <th>IP</th>
                                    <th>وضعیت</th>
                                    <th width="10%"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.userlist)
            {
                                    <tr>
                                        <td>@(counter++)</td>
                                        <td>@item.username</td>
                                        <td>@item.actual_profile</td>
                                        <td>@item.uptime_used</td>
                                        <td>
                                            @try
                                            { @item.download_used }
                                            catch { }
                                        </td>
                                        <td>
                                            @try
                                            { @item.upload_used }
                                            catch { }
                                        </td>
                                        <td data-toggle="tooltip" data-original-title="<b>@item.last_seenT</b>" data-html="true">@item.last_seen</td>
                                        <td>@item.first_name</td>
                                        <td>@item.last_name</td>
                                        <td>@item.phone</td>
                                        <td>@item.location</td>
                                        <td>@item.email</td>
                                        <td>@item.comment</td>
                                        <td>@item.ip_address</td>
                                        <td>
                                            @if (item.disabled == "false")
                                            {
                                                <span class="label label-success">فعال</span>
                                            }
                                            else
                                            {
                                                <span class="label label-danger">غیره فعال</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="dropdown">
                                                <button id="btnSearchDrop2" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" class="btn btn-outline-secondary dropdown-toggle dropdown-menu-right"><i class="icon-cog3"></i> پردازش</button>
                                                <span aria-labelledby="btnSearchDrop2" class="dropdown-menu mt-1 dropdown-menu-right">
                                                    <a onclick="UserEdit('@item.id');" class="dropdown-item">
                                                        <i class="icon-pen3 primary"></i> ویرایش
                                                    </a>
                                                    <a onclick="UserDetails('@item.id');" class="dropdown-item">
                                                        <i class="fa fa-book"></i> جزئیات
                                                    </a>
                                                    <a onclick="Userremove('@item.id');" class="dropdown-item">
                                                        <i class="icon-trash4 danger"></i> حذف
                                                    </a>
                                                    @if (item.disabled == "false")
                                                    {
                                                        <a onclick="Userdisable('@item.id');"  class="dropdown-item">
                                                            <i class="icon-lock danger"></i> غیره فعال
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a onclick="Userenable('@item.id');"  class="dropdown-item">
                                                            <i class="icon-unlock primary"></i> فعال
                                                        </a>
                                                    }
                                                </span>
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section ScriptUp{
    <link rel="stylesheet" type="text/css" href="~/Content/css/plugins/tables/extensions/dataTables.colVis.css">
}
@section DownScript{
    <script src="~/Content/js/plugins/tables/datatable/dataTables.colVis.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            var table = $('#grid').dataTable({
                "order": [[1, 'asc']],
                "iDisplayLength": 10,
                "bProcessing": true,
                "bStateSave": true,
                "bFilter": true,
                "scrollX": true,
                "bAutoWidth": true,
                "aoColumnDefs": [{ "bSortable": false, "aTargets": [-1] }],
                "aLengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                "oLanguage": {
                    "sUrl": "/Content/js/plugins/tables/datatable/dataTables.persian.txt"
                },
                dom: 'C<"clear">lfrtip',
                columnDefs: [{
                    visible: !1,
                    targets: [6, 7, 8, 9, 10, 11, 12, 13],
                    buttonText: "ویرایش جدول",
                }],
                colVis: {
                    restore: "پیشفرض",
                    showAll: "نمایش همه",
                    showNone: "پنهان سازی"
                }
            });
        });


        function Userremove(id) {
            PostData("@Url.Action(MVC.Company.UserManager.Userremove())", { id: id });
        }

        function Userdisable(id) {
            PostData("@Url.Action(MVC.Company.UserManager.Userdisable())", { id: id });
        }

        function Userenable(id) {
            PostData("@Url.Action(MVC.Company.UserManager.Userenable())", { id: id });
        }


        function UserEdit(id) {
            PostData("@Url.Action(MVC.Company.UserManager.UserEdit())", { id: id });
        }

        function UserDetails(id) {
            PostData("@Url.Action(MVC.Company.UserManager.UserDetails())", { id: id });
        }

    </script>
}