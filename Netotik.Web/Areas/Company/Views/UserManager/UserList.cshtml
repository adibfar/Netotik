@using Netotik.Resources;
@{
    ViewBag.Title = Captions.UsersList;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var counter = 1;
}
<section id="configuration">
    <div class="row">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-header">
                    <a value="@Captions.NewUser" class="btn btn-social btn-instagram" href="@Url.Action(MVC.Company.UserManager.UserCreate())">
                        <span class="icon-user-plus font-medium-4"></span>
                        @Captions.NewUser
                    </a>
                    <a value="@Captions.NewMultiUser" class="btn btn-social btn-instagram" href="@Url.Action(MVC.Company.UserManager.ResetCounter())">
                        <span class="icon-users font-medium-4"></span>
                        @Captions.NewMultiUser
                    </a>
                    <a value="@Captions.MakeCard" class="btn btn-social btn-instagram" href="@Url.Action(MVC.Company.UserManager.ResetCounter())">
                        <span class="icon-card font-medium-4"></span>
                        @Captions.MakeCard
                    </a>
                </div>
                <div class="card-body collapse in">
                    <div class="card-block card-dashboard">
                        <table class="table table-striped table-bordered table-hover" id="grid">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>@Captions.UserName</th>
                                    <th>@Captions.PackageName</th>
                                    <th>@Captions.OnlineTime</th>
                                    <th>@Captions.Download</th>
                                    <th>@Captions.Upload</th>
                                    <th>@Captions.LastConnection</th>
                                    <th>@Captions.FirstName</th>
                                    <th>@Captions.LastName</th>
                                    <th>@Captions.MobileNumber</th>
                                    <th>@Captions.Email</th>
                                    <th>@Captions.NationalCode</th>
                                    <th>@Captions.Active</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.userlist)
            {
                                    <tr>
                                        <td>@(counter++)</td>
                                        <td>@item.username</td>
                                        <td>@item.actual_profile</td>
                                        <td>@item.uptime_used</td>
                                        <td>
                                            @try
                                            { @item.download_used }
                                            catch { }
                                        </td>
                                        <td>
                                            @try
                                            { @item.upload_used }
                                            catch { }
                                        </td>
                                        <td data-toggle="tooltip" data-original-title="<b>@item.last_seenT</b>" data-html="true">@item.last_seen</td>
                                        <td>@item.first_name</td>
                                        <td>@item.last_name</td>
                                        <td>@item.phone</td>
                                        <td>@item.email</td>
                                        <td>@item.NationalCode</td>
                                        <td>
                                            @if (item.disabled == "false")
                                            {
                                                <span class="label label-success">@Captions.Enabled</span>
                                            }
                                            else
                                            {
                                                <span class="label label-danger">@Captions.Disabled</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="dropdown">
                                                <button id="btnSearchDrop2" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" class="btn btn-outline-secondary dropdown-toggle dropdown-menu-right"><i class="icon-cog3"></i>@Captions.Action</button>
                                                <span aria-labelledby="btnSearchDrop2" class="dropdown-menu mt-1 dropdown-menu-right">
                                                    <a onclick="UserEdit('@item.id');" class="dropdown-item">
                                                        <i class="icon-pen3 primary"></i> @Captions.Edit
                                                    </a>
                                                    <a onclick="UserDetails('@item.id');" class="dropdown-item">
                                                        <i class="fa fa-book"></i> @Captions.Details
                                                    </a>
                                                    <a onclick="Userremove('@item.id');" class="dropdown-item">
                                                        <i class="icon-trash4 danger"></i> @Captions.Remove
                                                    </a>
                                                    @if (item.disabled == "false")
                                                    {
                                                        <a onclick="Userdisable('@item.id');" class="dropdown-item">
                                                            <i class="icon-lock danger"></i> @Captions.Disable
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a onclick="Userenable('@item.id');" class="dropdown-item">
                                                            <i class="icon-unlock primary"></i> @Captions.Enable
                                                        </a>
                                                    }
                                                </span>
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section UpScript{
    <link rel="stylesheet" type="text/css" href="~/Content/css/plugins/tables/extensions/dataTables.colVis.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/plugins/tables/extensions/buttons.dataTables.min.css">
}
@section DownScript{
    <script src="~/Content/js/plugins/tables/datatable/dataTables.buttons.min.js" type="text/javascript"></script>
    <script src="~/Content/js/plugins/tables/jszip.min.js" type="text/javascript"></script>
    <script src="~/Content/js/plugins/tables/pdfmake.min.js" type="text/javascript"></script>
    <script src="~/Content/js/plugins/tables/vfs_fonts.js" type="text/javascript"></script>
    <script src="~/Content/js/plugins/tables/buttons.html5.min.js" type="text/javascript"></script>
    <script src="~/Content/js/plugins/tables/buttons.colVis.min.js" type="text/javascript"></script>



    <script type="text/javascript">
        $(function () {
            var table = $('#grid').dataTable({
                "iDisplayLength": 10,
                "bProcessing": true,
                "bStateSave": true,
                "bFilter": true,
                "columnDefs": [
                {
                "targets": [7],
                "visible": false
                },
                {
                    "targets": [6],
                    "visible": false
                },
                {
                    "targets": [8],
                    "visible": false
                },
                {
                    "targets": [9],
                    "visible": false
                },
                {
                    "targets": [10],
                    "visible": false
                }
                ],
                dom: 'Bfrtip',
                lengthMenu: [
                             [10, 25, 50, -1],
                             ['10', '25', '50', 'All']
                ],
                buttons: [
                    'copy', 'excel', 'pdf', 'pageLength', 'colvis'
                ]
            });
        });


        function Userremove(id) {
            PostData("@Url.Action(MVC.Company.UserManager.Userremove())", { id: id });
        }

        function Userdisable(id) {
            PostData("@Url.Action(MVC.Company.UserManager.Userdisable())", { id: id });
        }

        function Userenable(id) {
            PostData("@Url.Action(MVC.Company.UserManager.Userenable())", { id: id });
        }


        function UserEdit(id) {
            PostData("@Url.Action(MVC.Company.UserManager.UserEdit())", { id: id });
        }

        function UserDetails(id) {
            PostData("@Url.Action(MVC.Company.UserManager.UserDetails())", { id: id });
        }

    </script>
}