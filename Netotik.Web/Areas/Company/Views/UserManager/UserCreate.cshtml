@model Netotik.ViewModels.Mikrotik.UsermanagerUserRegister
@{
    ViewBag.Title = " کاربر جدید ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm(MVC.Company.UserManager.ActionNames.UserCreate, MVC.Company.UserManager.Name, FormMethod.Post,
                                                                    htmlAttributes: new { @class = "form cmxform form-horizontal tasi-form", enctype = "multipart/form-data", id = "form" }))
{

    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-md-12">
                <button name="actionType" value="@Netotik.Common.Controller.ActionType.Save" class="btn btn-outline btn-primary" onclick="AjaxForm.Post(this, 'form')" data-loading-text="در حال ارسال اطلاعات">
                    <span class="fa fa-check"></span>
                    @Netotik.Resources.Captions.Save
                </button>
                <button name="actionType" value="@Netotik.Common.Controller.ActionType.SaveContinue" class="btn btn-primary btn-outline" onclick="AjaxForm.Post(this, 'form')" data-loading-text="در حال ارسال اطلاعات">
                    <span class="fa fa-edit"></span>
                    @Netotik.Resources.Captions.SaveEdit
                </button>
                <a class="btn btn-default btn-outline pull-left" href="@Url.Action(MVC.Company.UserManager.ActionNames.UserList, MVC.Company.UserManager.Name)">
                    <span class="fa fa-reply"></span>
                    @Netotik.Resources.Captions.Back
                </a>
            </div>

            <div class="col-md-12">
                @Html.ValidationSummary(false, "", htmlAttributes: new { @class = "text-danger" })
                <span class="text-danger">توجه کنید تمامی مقادیر را انگلیسی تکمیل کنید.</span>
            </div>
        </div>
    </div>
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="tabs-container">
            <div class="nav-tabs">

                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#requiredInfo" data-toggle="tab">مشخصات </a>
                    </li>

                </ul>

                <div class="tab-content">

                    <div class="tab-pane active" id="requiredInfo">
                        <div class="panel-body">
                            <fieldset>
                                <div class="form-group">
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.first_name)
                                    </div>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.last_name)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.username)
                                    </div>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.password)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <div class="input-group">
                                            <label class="font-noraml">انتخاب تعرفه</label>
                                            <select id="profile" name="profile" data-placeholder="انتخاب تعرفه" class="chosen-select chosen-rtl" style="min-width:350px;" tabindex="2">
                                                @foreach (var item in ViewBag.profiles)
                                                {
                                                    <option value="@item.name">@item.name</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.phone)
                                    </div>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.email)
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.location)
                                    </div>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.comment)
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>

                </div>

            </div>

        </div>
    </div>
}