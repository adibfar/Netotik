@{
    ViewBag.Title = Netotik.Resources.Captions.PackageList;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var counter = 1;
}
<section id="configuration">
    <div class="row">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-header">
                    <a value="@Netotik.Resources.Captions.NewPackage" class="btn btn-social btn-instagram" href="@Url.Action(MVC.Company.UserManager.PackageCreate())">
                        <span class="icon-plus4 font-medium-4"></span>
                        @Netotik.Resources.Captions.NewPackage
                    </a>
                </div>
                <div class="card-body collapse in">
                    <div class="card-block card-dashboard">
                        <table class="table table-striped table-bordered table-hover" id="grid">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th >@Netotik.Resources.Captions.PackageName</th>
                                    <th>Name OF Group</th>
                                    <th>@Netotik.Resources.Captions.Price</th>
                                    <th>@Netotik.Resources.Captions.TimeValidity</th>
                                    <th width="10%"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.userlist)
            {
                                    <tr>
                                        <td>@(counter++)</td>
                                        <td>@item.name</td>
                                        <td>@item.name_for_users</td>
                                        <td>@item.price</td>
                                        <td>@item.validity</td>
                                        <td>
                                            <span class="dropdown">
                                                <button id="btnSearchDrop2" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" class="btn btn-outline-secondary dropdown-toggle dropdown-menu-right"><i class="icon-cog3"></i> @Netotik.Resources.Captions.Action</button>
                                                <span aria-labelledby="btnSearchDrop2" class="dropdown-menu mt-1 dropdown-menu-right">
                                                    <a onclick="PackageDetails('@item.id');" class="dropdown-item">
                                                        <i class="fa fa-book"></i> @Netotik.Resources.Captions.Details
                                                    </a>
                                                    <a onclick="ProfileRemove('@item.id');" class="dropdown-item">
                                                        <i class="icon-trash4 danger"></i> @Netotik.Resources.Captions.Remove
                                                    </a>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section UpScript{
    <link rel="stylesheet" type="text/css" href="~/Content/css/plugins/tables/extensions/buttons.dataTables.min.css">
}
@section DownScript{
    <script src="~/Content/js/plugins/tables/datatable/dataTables.buttons.min.js" type="text/javascript"></script>
<script src="~/Content/js/plugins/tables/jszip.min.js" type="text/javascript"></script>
<script src="~/Content/js/plugins/tables/pdfmake.min.js" type="text/javascript"></script>
<script src="~/Content/js/plugins/tables/vfs_fonts.js" type="text/javascript"></script>
<script src="~/Content/js/plugins/tables/buttons.html5.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            var table = $('#grid').dataTable({
                "iDisplayLength": 10,
                "bProcessing": true,
                "bStateSave": true,
                "bFilter": true,
                dom: 'Bfrtip',
                lengthMenu: [
                             [10, 25, 50, -1],
                             ['10', '25', '50', 'All']
                ],
                buttons: [
                    'copy', 'excel', 'pdf', 'pageLength'
                ]
            });
        });


        function ProfileRemove(id) {
            PostData("@Url.Action(MVC.Company.UserManager.ProfileRemove())", { id: id });
        }

        function PackageDetails(id) {
            PostData("@Url.Action(MVC.Company.UserManager.PackageDetails())", { id: id });
        }


    </script>
}