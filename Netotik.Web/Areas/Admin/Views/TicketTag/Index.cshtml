@model List<Netotik.Domain.Entity.IssueLabel>
@{
    ViewBag.Title = "مدیریت برچسب ها";
    var roles = Html.CurrentUserPermissions();

    var canAdd = roles.Any(x => x == Netotik.ViewModels.Identity.Security.AssignableToRolePermissions.CanCreateTag);
}

<div class="col-lg-12" id="ContentPage">
    <section class="panel">
        <header class="panel-heading">
            @ViewBag.Title
            @if (canAdd)
            {
                @Html.ActionLink("برچسب جدید", MVC.Admin.IssueLabel.ActionNames.Create, MVC.Admin.IssueLabel.Name, null, new { @class = "btn btn-sm btn-primary pull-left" })
            }

        </header>
        @Html.Partial("_Table", Model)
    </section>
</div>
