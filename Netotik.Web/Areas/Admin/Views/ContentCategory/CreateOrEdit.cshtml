@model Netotik.ViewModels.Common.ContentCategory.ContentCategoryModel
@{
    Layout = null;
}
@Html.HiddenFor(model => model.Id)



<div class="tabs-container">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#requiredInfo" data-toggle="tab">
                <i class="fa fa-archive"></i>
            مشخصات </a>
        </li>
    </ul>


    <div class="tab-content">
        <div class="tab-pane active" id="requiredInfo">
            <div class="panel-body">

                <div class="form-group">
                    <div class="col-md-4 ">
                        @Html.LabelFor(model => model.ParentId, new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.ParentId, ViewBag.Categories as SelectList, "", new { @class = "chosen-select chosen-rtl form-control" })
                    </div>


                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Name)
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.showInMenu)
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Description)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
