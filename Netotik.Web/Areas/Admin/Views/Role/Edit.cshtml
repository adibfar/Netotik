@model Netotik.ViewModels.Identity.Role.RoleViewModel
@{
    ViewBag.Title = " ویرایش اطلاعات ";
    var listPermission = ViewBag.Permissones as IList<SelectListItem>;
}

@using (Html.BeginForm(MVC.Admin.Role.ActionNames.Edit, MVC.Admin.Role.Name, FormMethod.Post, new { @class = "form cmxform form-horizontal tasi-form", id = "form" }))
{
    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-md-12">
                <button name="actionType" value="@Netotik.Common.Controller.ActionType.Save" class="btn btn-outline btn-primary" onclick="AjaxForm.Post(this, 'form')" data-loading-text="در حال ارسال اطلاعات">
                    <span class="fa fa-check"></span>
                    @Netotik.Resources.Captions.Save
                </button>
                <button name="actionType" value="@Netotik.Common.Controller.ActionType.SaveContinue" class="btn btn-primary btn-outline" onclick="AjaxForm.Post(this, 'form')" data-loading-text="در حال ارسال اطلاعات">
                    <span class="fa fa-edit"></span>
                    @Netotik.Resources.Captions.SaveEdit
                </button>
                <a class="btn btn-default btn-outline pull-left" href="@Url.Action(MVC.Admin.Role.ActionNames.Index, MVC.Admin.Role.Name)">
                    <span class="fa fa-reply"></span>
                    @Netotik.Resources.Captions.Back
                </a>
            </div>

            <div class="col-md-12">
                @Html.ValidationSummary(false, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
    </div>
    @Html.AntiForgeryToken()


    <div class="tabs-container">

        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#requiredInfo" data-toggle="tab">مشخصات </a>
            </li>
            <li>
                <a href="#optionalInfo" data-toggle="tab">تنظیمات گروه</a>
            </li>
            <li>
                <a href="#Permissones" data-toggle="tab">مجوز ها</a>
            </li>
        </ul>

        <div class="tab-content">

            <div class="tab-pane active" id="requiredInfo">
                <div class="panel-body">
                    <fieldset>
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            <div class="col-md-5 ">
                                @Html.EditorFor(model => model.Name)
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>

            <div class="tab-pane" id="optionalInfo">
                <div class="panel-body">
                    <fieldset>
                        @Html.EditorFor(model => model.IsDefaultForRegister)
                    </fieldset>
                </div>
            </div>

            <div class="tab-pane" id="Permissones">
                <div class="panel-body">
                    @foreach (var item in listPermission.GroupBy(x => x.Group.Name))
                    {
                        <fieldset>
                            @Netotik.Web.RazorHelpers.CheckBoxListBuilder.CheckBoxList("PermissonIds", item.ToList())
                        </fieldset>
                        <div class="hr-line-dashed"></div>
                    }
                </div>
            </div>
        </div>
    </div>
}
