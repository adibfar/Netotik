@model Netotik.ViewModels.Common.Setting.GeneralSettingModel
@{
    ViewBag.Title = Captions.PublicConfig;
}
<section class="flexbox-container">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm(MVC.Admin.Configuration.ActionNames.Index, MVC.Admin.Configuration.Name, FormMethod.Post, htmlAttributes: new { @class = "form cmxform form-horizontal tasi-form", id = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="card">
                    <div class="card-header">
                        <button name="actionType" value="@Netotik.Common.Controller.ActionType.Save" class="btn btn-social width-100 btn-instagram" onclick="AjaxForm.Post(this, 'form')" data-loading-text="@Captions.SendingData">
                            <span class="icon-checkmark2 font-medium-4"></span>
                            @Captions.Save
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card-block">
                                    <div class="tabs-container">
                                        <ul class="nav nav-tabs nav-underline">
                                            <li class="nav-item">
                                                <a class="nav-link active" id="baseIcon-tab21" data-toggle="tab" aria-controls="tabIcon21" href="#Public" aria-expanded="true">
                                                    <i class="icon-cog"></i> @Captions.PublicConfig
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" id="baseIcon-tab22" data-toggle="tab" aria-controls="tabIcon22" href="#Contact" aria-expanded="false">
                                                <i class="icon-flag4"></i> @Captions.ContactInformation</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" id="baseIcon-tab22" data-toggle="tab" aria-controls="tabIcon22" href="#Sms" aria-expanded="false">
                                                    <i class="icon-bell"></i> @Captions.SmsConfig
                                                </a>
                                            </li>
                                        </ul>

                                        <div class="tab-content px-1 pt-1">
                                            <div class="tab-pane active form-horizontal panel-body" id="Public">
                                                <div class="panel-body">
                                                    <fieldset>
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.HomePageTitle)
                                                            @Html.TextBoxFor(model => model.HomePageTitle, new { @class = "form-control" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.HomePageDescription)
                                                            @Html.TextBoxFor(model => model.HomePageDescription, new { @class = "form-control" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.HomePageKeywords)
                                                            @Html.TextBoxFor(model => model.HomePageKeywords, new { @class = "form-control" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.Facebook)
                                                            @Html.TextBoxFor(model => model.Facebook, new { @class = "form-control" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.Twitter)
                                                            @Html.TextBoxFor(model => model.Twitter, new { @class = "form-control" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.Instagram)
                                                            @Html.TextBoxFor(model => model.Instagram, new { @class = "form-control" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.GooglePlus)
                                                            @Html.TextBoxFor(model => model.GooglePlus, new { @class = "form-control" })
                                                        </div>
                                                    </fieldset>
                                                </div>
                                            </div>
                                            <div class="tab-pane form-horizontal panel-body" id="Contact">
                                                <fieldset>
                                                    <div class="panel-body">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.CompanyName)
                                                            @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.CompanyAddress)
                                                            @Html.TextBoxFor(model => model.CompanyAddress, new { @class = "form-control" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.CompanyTel1)
                                                            @Html.TextBoxFor(model => model.CompanyTel1, new { @class = "form-control" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.CompanyTel2)
                                                            @Html.TextBoxFor(model => model.CompanyTel2, new { @class = "form-control" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.CompanyEmail1)
                                                            @Html.TextBoxFor(model => model.CompanyEmail1, new { @class = "form-control" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.CompanyEmail2)
                                                            @Html.TextBoxFor(model => model.CompanyEmail2, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                </fieldset>
                                            </div>
                                            <div class="tab-pane form-horizontal panel-body" id="Sms">
                                                <fieldset>
                                                    <div class="panel-body">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.SmsNumber)
                                                            @Html.TextBoxFor(model => model.SmsNumber, new { @class = "form-control" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.SmsUsername)
                                                            @Html.TextBoxFor(model => model.SmsUsername, new { @class = "form-control" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.SmsPassword)
                                                            @Html.TextBoxFor(model => model.SmsPassword, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                </fieldset>
                                            </div>


                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>