@model Netotik.ViewModels.CMS.Menu.MenuModel
@{
    Layout = null;
}
@Html.HiddenFor(model => model.Id)

<div class="tabs-container">

    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#requiredInfo" data-toggle="tab">
                <i class="fa fa-archive"></i>
                مشخصات
            </a>
        </li>
    </ul>

    <div class="tab-content">

        <div class="tab-pane active" id="requiredInfo">
            <div class="panel-body">
                <fieldset>
                    <div class="form-group">
                        <div class="col-sm-4">
                            @Html.LabelFor(model => model.ParentId, new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.ParentId, ViewBag.Menues as SelectList, "ریـشه", new { @class = "chosen-select chosen-rtl form-control" })
                        </div>
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.Name)
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="form-group">

                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Url, new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.Url, new { @class = "form-control", id = "Url" })
                        </div>
                        <div class="col-md-2">
                            @Html.EditorFor(model => model.Order)
                        </div>
                        <div class="col-md-2">
                            @Html.EditorFor(model => model.Icon)
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">

                        @*<div class="col-md-4">
                                @Html.DropDownList("PageList", ViewBag.Pages as List<SelectListItem>, new { @class = "chosen-select chosen-rtl form-control" })
                            </div>*@
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.IsActive)
                        </div>
                    </div>

                </fieldset>
            </div>
        </div>
    </div>
</div>
