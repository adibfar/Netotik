@model Netotik.Domain.Entity.Content
@{
    ViewBag.Title = "مطلب: "+Model.Title;
}

<div class="col-lg-12" id="ContentPage">

    <section class="panel">
        <header class="panel-heading tab-bg-dark-navy-blue ">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a data-toggle="tab" href="#profile"> محتوا مطلب</a>
                </li>
            </ul>
        </header>
        <div class="panel-body">
            <div class="tab-content">
                <div id="profile" class="tab-pane active form-horizontal">


                    @Html.DisplayFor(model => model.Title)
                    @Html.DisplayFor(model => model.BodyOverview)
                    @Html.DisplayFor(model => model.Body, "CKEditor")

                    @Html.DisplayFor(model => model.AllowComments, "Bool")
                    @Html.DisplayFor(model => model.AllowViewComments, "Bool")
                    @Html.DisplayFor(model => model.CommentCount)
                    @Html.DisplayFor(model => model.CountView)
                    @Html.DisplayFor(model => model.AdminComment)
                    @Html.DisplayFor(model => model.CreateDate)
                    @if (Model.StartDate.HasValue)
                    {
                        @Html.DisplayFor(model => model.StartDate)
                    }
                    @if (Model.EndDate.HasValue)
                    {
                        @Html.DisplayFor(model => model.EndDate)
                    }
                    <div class="col-md-2">تصویر</div>
                    @Html.Partial(MVC.Shared.Views._SingleImageForm)
                </div>
            </div>
        </div>
    </section>
</div>

    