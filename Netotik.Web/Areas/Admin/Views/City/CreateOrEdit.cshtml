@model Netotik.ViewModels.Common.AddressCity.AddressCityModel
@{
    Layout = null;
}
@Html.HiddenFor(model => model.Id)

<div class="tabs-container">

    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#requiredInfo" data-toggle="tab">
                <i class="fa fa-archive"></i>
            مشخصات </a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="requiredInfo">
            <div class="panel-body">
                <fieldset>
                    <div class="form-group">
                        <div class="col-md-5">
                            @Html.LabelFor(model=>model.AddressStateId)
                            @Html.DropDownListFor(model => model.AddressStateId, ViewBag.States as SelectList, new { @class = "chosen-select chosen-rtl form-control" })
                        </div>
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.Name)
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.IsActive)
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.IsDefault)
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>

</div>
