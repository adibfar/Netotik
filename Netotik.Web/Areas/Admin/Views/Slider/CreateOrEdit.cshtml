@model Netotik.ViewModels.Slider.SliderModel
@{
    Layout = null;
}
<div class="tabs-container">

    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#requiredInfo" data-toggle="tab">
                <i class="fa fa-archive"></i>
                مشخصات
            </a>
        </li>
    </ul>

    <div class="tab-content">
        @Html.HiddenFor(model => model.BigText)

        <div class="tab-pane active" id="requiredInfo">
            <div class="panel-body">
                <fieldset>
                    <div class="form-group">

                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Url)
                        </div>
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.SmallText)
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Order)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.IsActive)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Image)
                        </div>
                    </div>
                </fieldset>
                @Html.Partial("_SingleImageForm")
            </div>
        </div>
    </div>
</div>
