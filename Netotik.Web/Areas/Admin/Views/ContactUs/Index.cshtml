@model MvcPaging.IPagedList<Netotik.Domain.Entity.InboxMessage>
@{
    ViewBag.Title = "پیام های دریافتی";
}

<div class="col-lg-12" id="ContentPage">
    <section class="panel">
        <header class="panel-heading">
            @ViewBag.Title
        </header>
        <div class="panel-body">
            <form class="form-inline" role="form" action="@Url.Action(MVC.Admin.ContactUs.ActionNames.Index,MVC.Admin.ContactUs.Name)">
                <div class="input-group m-bot15">
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="submit">جستجو</button>
                    </span>
                    <input type="text" class="form-control" name="Search" placeholder="نام ، ایمیل و .. ">
                </div>
            </form>

        </div>

        @Html.Partial("_Table", Model)

    </section>

</div>

<script type="text/javascript">

    function beginPaging(args) {
        // Animate
        $('#gridlist').fadeOut('normal');
    }

    function successPaging() {
        // Animate
        $('#gridlist').fadeIn('normal');
    }

    function failurePaging() {
        alert("Could not retrieve list.");
    }


</script>