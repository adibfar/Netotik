@model Netotik.ViewModels.Common.Language.LanguageModel
@{
    Layout = null;
}
<!-- Modal -->
<div class="modal fade text-xs-left" id="Create" tabindex="-1" role="dialog" aria-labelledby="myModalLabel20" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel20">زبان جدید</h4>
            </div>
            @using (Html.BeginForm(MVC.Admin.Language.ActionNames.Create, MVC.Admin.Language.Name, FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", enctype = "multipart/form-data", id = "CreateForm" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                @Html.LabelFor(m => m.FlagImageFileName)
                                @Html.DropDownListFor(model => model.FlagImageFileName, ViewBag.Flags as IList<SelectListItem>, new { @class = "selectize-select" })
                                @Html.ValidationMessageFor(model => model.FlagImageFileName, "", htmlAttributes: new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="form-group">
                                @Html.LabelFor(m => m.LanguageCulture)
                                @Html.DropDownListFor(model => model.LanguageCulture, ViewBag.Cultures as IList<SelectListItem>, new { @class = "selectize-select" })
                                @Html.ValidationMessageFor(model => model.LanguageCulture, "", htmlAttributes: new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group has-feedback has-icon-left">
                                @Html.LabelFor(m => m.Name)
                                <div class="position-relative has-icon-left">
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                    <div class="form-control-position">
                                        <i class="icon-location22"></i>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Name, "", htmlAttributes: new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group has-feedback has-icon-left">
                                @Html.LabelFor(m => m.UniqueSeoCode)
                                <div class="position-relative has-icon-left">
                                    @Html.TextBoxFor(m => m.UniqueSeoCode, new { @class = "form-control" })
                                    <div class="form-control-position">
                                        <i class="icon-location22"></i>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.UniqueSeoCode, "", htmlAttributes: new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group has-feedback has-icon-left">
                                @Html.LabelFor(m => m.DisplayOrder)
                                <div class="position-relative has-icon-left">
                                    @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "form-control" })
                                    <div class="form-control-position">
                                        <i class="icon-location22"></i>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.DisplayOrder, "", htmlAttributes: new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row form-group skin skin-flat">
                        <div class="col-md-4 col-sm-6 col-xs-12">
                            <fieldset>
                                @Html.CheckBoxFor(model => model.IsDefault)
                                @Html.LabelFor(model => model.IsDefault)
                            </fieldset>
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-12">
                            <fieldset>
                                @Html.CheckBoxFor(model => model.Rtl)
                                @Html.LabelFor(model => model.Rtl)
                            </fieldset>
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-12">
                            <fieldset>
                                @Html.CheckBoxFor(model => model.Published)
                                @Html.LabelFor(model => model.Published)
                            </fieldset>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ResourcesXml)
                                <div class="position-relative">
                                    @Html.TextBoxFor(model => model.ResourcesXml, new { @class = "form-control", type = "file" })
                                    @Html.ValidationMessageFor(model => model.ResourcesXml, "", htmlAttributes: new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">
                        <i class="icon-cross2"></i>
                        بستن
                    </button>
                    <button name="actionType" value="@Netotik.Common.Controller.ActionType.Save" type="button" class="btn btn-outline-success" onclick="AjaxForm.Post(this, 'CreateForm')" data-loading-text="در حال ارسال اطلاعات">
                        <i class="icon-check2"></i>
                        @Netotik.Resources.Captions.Save
                    </button>
                </div>
            }
        </div>
    </div>
</div>
