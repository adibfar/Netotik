@{ 
    ViewBag.Title = Captions.EditLanguage;
}
<section id="configuration">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-body collapse in">
                <div class="card-block card-dashboard">
                    @Html.Partial(MVC.Admin.Language.Views._TableResource)
                </div>
            </div>
        </div>
    </div>
</section>


<div id="edit-container"></div>

@section DownScript{

    <script type="text/javascript">
        $(function () {
            var table = $('#grid').dataTable({
                "order": [[1, 'asc']],
                "iDisplayLength": 10,
                "bProcessing": true,
                "bStateSave": true,
                "bServerSide": true,
                "bFilter": true,
                "aLengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                "bAutoWidth": false,
                "sAjaxSource":  '@(Url.Action(MVC.Admin.Language.GetResourceList())+"/"+ViewContext.RouteData.Values["Id"])',
                "fnServerData": function (sSource, aoData, fnCallback) {
                    $.ajax({
                        "dataType": 'json',
                        "type": "POST",
                        "url": sSource,
                        "data": aoData,
                        "success": fnCallback
                    });
                },
                "aoColumnDefs": [
                    { "bSortable": false, "aTargets": [0] },
                    { "bSortable": false, "aTargets": [-1] },
                     {
                         "targets": -1,
                         "render": function (data, type, full, meta) {
                             return '<a onclick="edit(' + full.Id + ');" class="btn btn-outline-blue-grey btn-square">'
                                 + '<i class="icon-pen3"></i> '+'@Captions.Edit'+' </a>'
                         }
                     }
                ]
                ,
                "aoColumns": [
                    { "mDataProp": "RowNumber" },
                    { "mDataProp": "Key" },
                    { "mDataProp": "Value" },
                    { "no": "no" }
                ]
            });

        });

        function edit(id) {
            CardBlock('.card');
            var url = "@Url.Action(MVC.Admin.Language.EditResource())";
            $.get(url + '/' + id, function (data) {
                $('#edit-container').html(data);
                Selectize();
                Icheck();
                $('#Edit').modal('show');
                CardUnBlock('.card');
                AjaxForm.EnableAjaxFormvalidate('Edit');
            });
        };

    </script>
}
