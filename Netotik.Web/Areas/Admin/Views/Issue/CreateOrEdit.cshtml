@model Netotik.ViewModels.Support.Issue.IssueModel
@{
    Layout = null;
}
@Html.HiddenFor(model => model.Id)



<div class="tabs-container">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#requiredInfo" data-toggle="tab">
                <i class="fa fa-archive"></i>
                مشخصات
            </a>
        </li>
    </ul>


    <div class="tab-content">
        <div class="tab-pane active" id="requiredInfo">
            <div class="panel-body">

                <div class="form-group">
                    <div class="col-md-8">
                        @Html.LabelFor(model => model.Title, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                    </div>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Periority)
                    </div>
                    
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.UserIds, new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.UserIds, ViewBag.Users as IEnumerable<SelectListItem>, "", new { @class = "chosen-select chosen-rtl form-control", multiple = "" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.RoleIds, new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.RoleIds, ViewBag.Roles as IEnumerable<SelectListItem>, "", new { @class = "chosen-select chosen-rtl form-control", multiple = "" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(model => model.LabelIds, new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.LabelIds, ViewBag.Labels as IEnumerable<SelectListItem>, "", new { @class = "chosen-select chosen-rtl form-control", multiple = "" })
                    </div>
                </div>


                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Description)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
