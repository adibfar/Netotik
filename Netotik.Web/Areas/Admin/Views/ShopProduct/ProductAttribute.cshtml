@model IEnumerable<Netotik.ViewModels.Shop.ProductAttributeValue.ProductAttributeValueModel>
@{
    ViewBag.Title = " مشخصات محصول";
}

<div class="col-lg-12" id="ContentPage">
    <section class="panel">
        @using (Html.BeginForm(MVC.Admin.ShopProduct.ActionNames.ProductAttribute, MVC.Admin.ShopProduct.Name, FormMethod.Post,
                    htmlAttributes: new { @class = "form cmxform form-horizontal tasi-form", enctype = "multipart/form-data" }))
        {

            <header class="panel-heading alert-info">
                <input class="btn btn-primary" type="submit" value="@Netotik.Resources.Captions.Save ">
                <a class="btn btn-default" href="@Url.Action(MVC.Admin.ShopProduct.ActionNames.Index, MVC.Admin.ShopProduct.Name)">@Netotik.Resources.Captions.Back </a>
                @Html.AntiForgeryToken()
            </header>

            <div class="panel-body">
                @for (int i = 0; i < Model.Count(); i++)
                {
                <input type="hidden" name="[@i].ProductId" value="@Model.ElementAt(i).ProductId" />
                <input type="hidden" name="[@i].ProductAttributeId" value="@Model.ElementAt(i).ProductAttributeId" />
                <div class="form-group">
                    <label class="control-label col-md-2" for="[@i].Value">@Model.ElementAt(i).FieldName</label>
                    <div class="col-md-8">
                        <input type="text" value="@Model.ElementAt(i).Value" class="form-control" name="[@i].Value" id="[@i].Value" />
                    </div>
                </div>
                }
            </div>
        }
    </section>
</div>