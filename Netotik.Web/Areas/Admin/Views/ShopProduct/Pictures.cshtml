@{
    ViewBag.Title = "لیست تصاویر";
    var postUrl = Url.Action(MVC.Admin.ShopProduct.ActionNames.DeletePicture, MVC.Admin.ShopProduct.Name);
}
<link href="~/Content/fileinput.min.css" rel="stylesheet" />
<div class="row" style="margin:10px 0;">
    <a class="btn btn-default" href="@Url.Action(MVC.Admin.ShopProduct.ActionNames.Index, MVC.Admin.ShopProduct.Name)">@Netotik.Resources.Captions.Back </a>
</div>
<div class="panel">
    <div class="panel-heading bg-warning">
        <div class="col-lg-12">
            @Html.Partial(MVC.Admin.ShopProduct.Views.AddPictureToFolder)
        </div>
    </div>

    <div class="row">
        <div class="col-md-12" id="picturesList">
            <div class="panel-body">
                @{ Html.RenderAction(MVC.Admin.ShopProduct.ActionNames.List, MVC.Admin.ShopProduct.Name, new { productId = ViewBag.ProductId });}
            </div>
        </div>
    </div>
</div>
@section DownScript{
    <script src="~/Scripts/fileinput.min.js"></script>
    <script src="~/Scripts/admin.js"></script>
    <script>
        Admin.OneImageUpload("img")
    </script>

    <script>
        // $(function () {
        $('body').on('focus', 'input[type="text"]', function (e) {
            e.stopPropagation();
            $(this).select();
        });
        $('body').on('click', 'span[id^="row"]', function (e) {
            e.stopPropagation();
            var span = $(this);
            var id = span.attr('id').replace('row-', '');
            swal({
                title: "آیا مطمئن هستید؟",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn btn-md btn-danger",
                confirmButtonText: "بله",
                cancelButtonText: "انصراف",
                closeOnConfirm: false
            },
                function (confirmed) {
                    if (confirmed) {
                        span.parent().parent().MVCDeleteRow({
                            'postUrl': '@postUrl',
                            'id': id
                        });
                        swal("", "رکورد مورد نظر حذف شد", "success");
                    }
                });
        });
        // });

    </script>
}
