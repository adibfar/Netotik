@model Netotik.ViewModels.CMS.Advertise.AdvertiseModel
@{
    ViewBag.Title = " ثبت بنر ";
}

@using (Html.BeginForm(MVC.Admin.Advertise.ActionNames.Create, MVC.Admin.Advertise.Name, FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", id = "form" }))
{
    <div class="ibox-content m-b-sm border-bottom">

        <div class="row">
            <div class="col-md-12">
                <button name="actionType" value="@Netotik.Common.Controller.ActionType.Save" class="btn btn-outline btn-primary" onclick="AjaxForm.Post(this, 'form')" data-loading-text="در حال ارسال اطلاعات">
                    <span class="fa fa-check"></span>
                    @Netotik.Resources.Captions.Save
                </button>
                <button name="actionType" value="@Netotik.Common.Controller.ActionType.SaveContinue" class="btn btn-primary btn-outline" onclick="AjaxForm.Post(this, 'form')" data-loading-text="در حال ارسال اطلاعات">
                    <span class="fa fa-edit"></span>
                    @Netotik.Resources.Captions.SaveEdit
                </button>
                <a class="btn btn-default btn-outline pull-left" href="@Url.Action(MVC.Admin.Advertise.ActionNames.Index, MVC.Admin.Advertise.Name)">
                    <span class="fa fa-reply"></span>
                    @Netotik.Resources.Captions.Back
                </a>
            </div>

            <div class="col-md-12">
                @Html.ValidationSummary(false, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
    </div>

    @Html.AntiForgeryToken()

    @Html.Partial("CreateOrEdit", Model)
}
