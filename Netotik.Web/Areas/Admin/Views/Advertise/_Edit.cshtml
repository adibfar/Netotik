@model Netotik.ViewModels.CMS.Advertise.AdvertiseModel
@{
    Layout = null;
}
<!-- Modal -->
<div class="modal fade text-xs-left" id="Edit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel20" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel20">ویرایش بنر</h4>
            </div>
            @using (Html.BeginForm(MVC.Admin.Advertise.ActionNames.Edit, MVC.Admin.Advertise.Name, FormMethod.Post,
                htmlAttributes: new { @class = "form-horizontal", enctype = "multipart/form-data", id = "EditForm" }))
            {
                @Html.HiddenFor(model => model.Id)
                @Html.AntiForgeryToken()
                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Url)
                                <div class="position-relative">
                                    @Html.TextBoxFor(m => m.Url, new { @class = "form-control", dir = "ltr" })
                                    @Html.ValidationMessageFor(model => model.Url, "", htmlAttributes: new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Alt)
                                <div class="position-relative">
                                    @Html.TextBoxFor(m => m.Alt, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Alt, "", htmlAttributes: new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Order)
                                <div class="position-relative">
                                    @Html.TextBoxFor(m => m.Order, new { @class = "form-control", dir = "ltr" })
                                    @Html.ValidationMessageFor(model => model.Order, "", htmlAttributes: new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @if (Model.Picture != null)
                        {
                            <div class="col-md-6 offset-md-3">
                                <fieldset class="mb-2">
                                    <img src="@Url.Content((Path.Combine(Netotik.Common.Controller.FilePathes._imagesAdvertisePath, Model.Picture.FileName)))" class="gallery-thumbnail" />
                                </fieldset>
                            </div>
                        }
                        <div class="col-md-12">
                            <fieldset>
                                @Html.EditorFor(model => model.Image)
                            </fieldset>
                        </div>
                        
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">
                        <i class="icon-cross2"></i>
                        بستن
                    </button>
                    <button name="actionType" value="@Netotik.Common.Controller.ActionType.Save" type="submit" class="btn btn-outline-success" onclick="AjaxForm.Post(this, 'EditForm')" data-loading-text="در حال ارسال اطلاعات">
                        <i class="icon-check2"></i>
                        @Netotik.Resources.Captions.Save
                    </button>
                </div>
            }
        </div>
    </div>
</div>
