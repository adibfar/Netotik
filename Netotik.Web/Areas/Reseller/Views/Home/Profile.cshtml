@model Netotik.ViewModels.Reseller.ProfileModel
@{
    ViewBag.Title = " پروفایل شرکت";
}

<div class="row">
    <div class="col-lg-12" id="ContentPage">
        <section class="panel">
            @using (Html.BeginForm(MVC.Reseller.Home.ActionNames.Profile, MVC.Reseller.Home.Name, FormMethod.Post,
                    htmlAttributes: new { @class = "form cmxform form-horizontal tasi-form", enctype = "multipart/form-data", id = "form" }))
            {


                <header class="panel-heading alert-info">
                    <button class="btn btn-primary" onclick="AjaxForm.CustomSubmit(this, 'form')" data-loading-text="در حال ارسال اطلاعات">
                        @Netotik.Resources.Captions.Save
                    </button>
                    @Html.AntiForgeryToken()
                </header>
                <div class="panel-body">

                    @Html.EditorFor(model=>model.Name)
                    @Html.EditorFor(model => model.Email)
                    @Html.EditorFor(model => model.MobileNumber)
                    @Html.EditorFor(model => model.Address)
                    @Html.EditorFor(model => model.PostalCode)
                </div>
            }

        </section>
    </div>
</div>