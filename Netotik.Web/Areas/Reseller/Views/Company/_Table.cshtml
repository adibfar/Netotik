@using MvcPaging
@using Netotik.Common.Extensions
@model IPagedList<Netotik.ViewModels.Company.TableCompanyModel>
@{ 
    Layout = null;
}
<div class="panel-body">
    <div class="input-group m-bot15">
        <span class="input-group-btn">
            <button class="btn btn-primary" type="submit">جستجو</button>
        </span>
        <input style="width:50%;" type="text" class="form-control" name="Search" id="filter" placeholder="جستجوی کاربر ، آدرس ایمیل، نام و...">
    </div>
</div>
<div id="gridlist">
    <table class="table table-stripped toggle-arrow-tiny footable" data-page-size="8" data-filter=#filter>
        <thead>
            <tr>
                <th>نام</th>
                <th>نام کاربری</th>
                <th>تاریخ پایان سرویس</th>
                <th>آدرس ایمیل</th>
                <th>وضعیت</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td >@item.Name</td>
                    <td >@item.Username</td>
                    <td >Unlimited</td>
                    <td >@item.Email</td>
                    <td >
                        @if (item.IsActive)
                        {
                            <span class="label label-success">فعال</span>
                        }
                        else
                        {
                            <span class="label label-danger">مسدود</span>

                        }
                    </td>

                    <td>
                        <a href="@Url.Action(MVC.Reseller.Company.ActionNames.Edit, new { id=item.Id})" class="btn btn-primary btn-xs "><i class="fa fa-pencil"></i></a>
                        <a href="@Url.Action(MVC.Reseller.Company.ActionNames.ChangePassword, new { id = item.Id })" class="btn btn-default btn-xs "><i class="fa fa-lock"></i></a>
                        <a href="@Url.Action(MVC.Reseller.Company.ActionNames.Detail, new { id = item.Id })" class="btn btn-white btn-xs "><i class="fa fa-book"></i></a>
                        <a>
                            @if (item.IsActive)
                            {
                                <form action="@Url.Action(MVC.Reseller.Company.ActionNames.Disable)" style="float:right" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button class="btn btn-danger btn-xs"><i class="fa fa-lock"></i></button>
                                </form>
                            }
                            else
                            {
                                <form action="@Url.Action(MVC.Reseller.Company.ActionNames.Enable)" style="float:right" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button class="btn btn-success btn-xs"><i class="fa fa-unlock"></i></button>
                                </form>
                            }
                        </a>
                    </td>

                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    <ul class="pagination pull-right"></ul>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
