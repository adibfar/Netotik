@model string
<div class="form-group">
    @Html.LabelFor(model => model, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextAreaFor(model => model, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model, "", htmlAttributes: new { @class = "error" })
    </div>
</div>